html
  head

    if(meta)
      title= meta.title

      if(meta.description)
        meta(name='meta' description=meta.description)
        
    base(href='/')
    link(href='fonts/fonts.css', type='text/css', rel='stylesheet')
    link(href='fontawesome/css/all.min.css', type='text/css', rel='stylesheet')
    link(href='dist/css/main.min.css', type='text/css', rel='stylesheet')
    link(rel='stylesheet' href='/highlight/styles/atom-one-dark.css')

    meta(name="viewport" content="width=device-width, initial-scale=1")

  body
    header

      nav#MainNav
        a.logo(href="/")
          i.fa.fa-code
          |&nbsp;Jason Snider

        button#ShowMainNav
          i.fas.fa-bars.fa-2x
          span.sr-only Menu

        ul
          li
            a#ToAbout(href='#About') About Me
          li
            a#ToProject(href='#Project') Projects
          li
            a(href='games') Games
          li
            a(href='tools') Tools
          li
            a(href='contact') Contact 
    main

      block content

      section#SocialMedia
        a(href="https://www.linkedin.com/in/jdsnider")
          i.fab.fa-linkedin
        a(href="https://github.com/jasonsnider")
          i.fab.fa-github
        a(href="https://twitter.com/jason_snider")
          i.fab.fa-twitter

      footer
        .left
          | Built with
          i.fa.fa-heart(arial-hidden="true")
          span.sr-only love
          | by Jason in Chicago
        .right
          a(href="privacy") Privacy

    script(src='highlight/highlight.pack.js')
    script(src='dist/js/article.min.js')
